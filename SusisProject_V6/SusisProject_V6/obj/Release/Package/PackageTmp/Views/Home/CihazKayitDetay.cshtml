        type: 'GET',
        success: function (data) {
            console.log('AJAX request for Marka successful.');
          /*  console.log('Received Marka data:', data); */

            var markaDropdown = $('#markaSelect');
            markaDropdown.empty();
            markaDropdown.append('<option value="">Select a Marka</option>');

            // Seçili markayı modelden al
            var selectedMarka = '@Model.Cihazlar.First().fkMarka';

            // API'den gelen verilerle dropdown
            $.each(data, function (index, item) {

                var normalizedSelectedMarka = selectedMarka.toLowerCase();
                var normalizedItem = item.toLowerCase();

                // Karşılaştırmayı iki şekilde yap
                var isSelected = normalizedItem === normalizedSelectedMarka ||
                    item.toUpperCase() === selectedMarka.toUpperCase();

                markaDropdown.append($('<option>', {
                    value: item,
                    text: item,
                    selected: isSelected // Seçili markayı işaretle
                }));
            });

            // Select2'yi yeniden başlat
            initializeSelect2(markaDropdown, "Select a Marka");
        },
        error: function (error) {
            console.error('AJAX request for Marka failed:', error);
        }
    });


