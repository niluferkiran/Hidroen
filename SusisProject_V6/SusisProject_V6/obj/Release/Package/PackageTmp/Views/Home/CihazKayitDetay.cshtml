    const dynamicDistrictsApiUrl = (ilKod) => `/Home/GetDistrictList?ilKod=${ilKod}`;

    const citySelect = $('#citySelect');
    const districtSelect = $('#districtSelect');

    if (!citySelect.length || !districtSelect.length) {
        console.error('Select elements not found in the DOM.');
        return;
    }

    // Şehir seçim kutusunu başlat
