            console.log('Cities data received:', citiesData); // Şehir verilerini kontrol edin

            citiesData.sort((a, b) => a.IlAd.localeCompare(b.IlAd));
            citiesData.forEach(city => {
                const option = new Option(city.IlAd, city.IlKod, false, false);
                citySelect.append(option);
